      }]];

      var defaultStyle = [{
          url: '/img/markercluster/m11.png',
          height: 53,
          width: 52,
        }, {
          url: '/img/markercluster/m22.png',
          height: 56,
          width: 55,
        }, {
          url: '/img/markercluster/m33.png',
          height: 66,
          width: 65,
        },{
          url: '/img/markercluster/m44.png',
          height: 78,
          width: 77,
        },{
          url: '/img/markercluster/m55.png',
          height: 90,
          width: 89,
        }
       ];
       
      var markerClusterer = null;
      var map = null;
      var imageUrl = 'http://chart.apis.google.com/chart?cht=mm&chs=24x32&chco=FFFFFF,008CFF,000000&ext=.png';

      function refreshMap() {
	      
        if (markerClusterer) {
	        
        	markerClusterer.clearMarkers();
        }
		
        $.getJSON("${h.url_for('/zone/get_diag_map_data')}?diag=" + $('#diag').val(), function (data) {
	        	
        	var markers = [];
            
            var markerImage = new google.maps.MarkerImage(imageUrl, new google.maps.Size(24, 32));

            for (var i = 0; i < data.data.length; i++) {
	            
              var latLng = new google.maps.LatLng(data.data[i].latitude, data.data[i].longitude)
              var marker = new google.maps.Marker({position: latLng, draggable: true,icon: markerImage});
              
              markers.push(marker);
            }
            markerClusterer = new MarkerClusterer(map, markers, {
	            //styles:defaultStyle
            });
		});
        
      }

      function initialize() {
    		
        map = new google.maps.Map(document.getElementById('map'), {
	        
          //center: new google.maps.LatLng(39.91, 116.38),
          mapTypeId: google.maps.MapTypeId.ROADMAP,
          center: {lat: 13.736717, lng: 100.523186},
          zoom: 6
        });

        geocoder = new google.maps.Geocoder();
        
        geocoder.geocode( { 'address': 'thailand' }, function(results, status) {
			var content = document.getElementById('content');
			if (status == google.maps.GeocoderStatus.OK) {
				map.fitBounds(results[0].geometry.viewport);
			} 
			else {
				//var c = document.getElementById('content');
				//c.innerHTML += address + ': ' + status + '<br>';
			}				
		});		
		
        var refresh = document.getElementById('refresh');
        
        google.maps.event.addDomListener(refresh, 'click', refreshMap);
		
      }

      function clearClusters(e) {
        e.preventDefault();
        e.stopPropagation();
        markerClusterer.clearMarkers();
      }

    </script>
  </head>
  <body>
    <h3></h3>
    <form method="post">
	    <select id="diag" name="diag" style="width:300px">
	    %for d in c.diags:
