    <script type="text/javascript">
	    
      google.load("jquery", "1");
      google.load('maps', '3', {
        other_params: 'sensor=false&language=th'
      });
      %if c.selectedDiag:
	  	var data = ${c.jsonData};
	  %else:
		var data = {};
	  %endif
      google.setOnLoadCallback(initialize);

      var styles = [[{
